{
    "manifest_version": 2,
    "name": "Hebrew Input Changer",
    "version": "1.5",
    "description": "Change English letters in input fields to Hebrew",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
      ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "commands": {
      "convertSelection": {
        "suggested_key": {
          "default": "Ctrl+M"
        },
        "description": "Toggle Hebrew Input"
      }
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["content.js"]
        }
      ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
    
  }
  